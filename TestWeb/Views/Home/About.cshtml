@model string[]
@{
    ViewBag.Title = "About";
}

<div class="container">
    <div class="row">
        <br/>
        <h2 class="title-beaty" style="text-align:center">About us</h2>

        <div class="parallax-window" data-parallax="scroll" style="height:1500px">
            <div class="col-md-12" style="padding-top:50px;padding-bottom:50px">


                @for (int i = 0; i < Model.Length; i++)
                { <div class="col-md-10 col-md-offset-1" style="padding:10px;background:#ffffff">
                @if (i % 2 == 0)
                {
                    <div class="col-md-9 text-beaty">
                        @Model[i].ToString()
                    </div>
                        <div class="col-md-3" style="background:#ff0000">

                        </div>
                }
                else
                {
                    <div class="col-md-3" style="background:#ff0000">

                    </div>
                        <div class="col-md-9 text-beaty">
                            @Model[i].ToString()
                        </div>
                }
            </div>
                }

            </div>
        </div>

    </div>

</div>
<script type="text/javascript" src="~/Scripts/parallax.min.js"></script>

<script type="text/javascript" src="~/Scripts/Main.js"></script>